@using OgrenciMvc.Models.EntityFramework
@model List<TBLNOTLAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <td>NOT ID</td>
        <td>ÖĞRENCİ</td>
        <td>DERS</td>
        <td>SINAV 1</td>
        <td>SINAV 2</td>
        <td>SINAV 3</td>
        <td>PROJE</td>
        <td>ORTALAMA</td>
        <td>DURUM</td>
        <td>İŞLEMLER</td>
    </tr>
    <tbody>
        @foreach (var snv in Model)
        {
            <tr>
                <td>@snv.NOTID</td>
                <td>@snv.OGRID</td>
                <td>@snv.DERSID</td>
                <td>@snv.SINAV1</td>
                <td>@snv.SINAV2</td>
                <td>@snv.SINAV3</td>
                <td>@snv.PROJE</td>
                <td>@snv.ORTALAMA</td>
                <td>@snv.DURUM</td>
                <td> <a href="/Notlar/NotGetir/@snv.NOTID" class="btn btn-warning">GÜNCELLE</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Notlar/YeniSinav/" class="btn btn-primary">YENİ SINAV EKLE</a>
